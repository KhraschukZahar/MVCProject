@model MVC_SportGoods.ViewModel.PostEditViewModel
@{
    ViewData["Title"] = "Edit new post";
}

<h1>CreatePost</h1>
<form enctype="multipart/form-data" asp-controller="SportGoods" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistImgPath" />
    <div class="form-group row">
        <label asp-for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="name" class="form-control" placeholder="Name" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input asp-for="description" class="form-control" placeholder="Description" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <textarea asp-for="price" class="form-control" placeholder="Price"></textarea>
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="img" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="img" class="form-control custom-file-input">
                <label class="custom-file-label">Click to change photo</label>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button type="submit" class="btn btn-info">Update</button>
        <a asp-controller="SportGoods" asp-action="SportGoods" class="btn btn-info">Cancel</a>
    </div>
</form>